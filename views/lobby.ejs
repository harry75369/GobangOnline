        <script src='/socket.io/socket.io.js' type='text/javascript'></script>
        <script>
          var socket = io.connect();
          socket.on('error', function() {
            alert("socket connection error!");
          });
          socket.on('connect', function() {
            socket.emit('join lobby', '<%= username %>');
          });
          socket.on('user list', function(data) {
            if ( data ) {
              //$('#user-list').text(JSON.stringify(data));
              var trs = '';
              data.sort(function(a,b){return b[1]-a[1];});
              for ( var i=0; i < data.length; i++ ) {
                trs += '<tr>';
                trs += '<td>'+(i+1)+'</td>';
                trs += '<td>'+data[i][0]+'</td>';
                trs += '<td>'+data[i][1]+'</td>';
                var rooms = '';
                for ( var room in data[i][2] ) {
                  if ( room ) rooms += room;
                }
                if ( !rooms ) rooms = 'Lobby';
                trs += '<td>'+rooms+'</td>';
              }
              $('#user-list').html(trs);
            }
          });
          socket.on('room list', function(data) {
            if ( data ) {
              //$('#room-list').text(JSON.stringify(data));
            }
          });
          socket.on('message', function(html) {
            $('#lobby-messages').append(html);
            $('#lobby-messages').scrollTop($('#lobby-messages').prop('scrollHeight'));
          });
          socket.on('user update', function(message) {
            var html = "<i>"+message+"</i><br/>"
            $('#lobby-messages').append(html);
            socket.emit('get user list');
          });
          $(document).ready(function() {
            $('#send-message').focus();
            $('#send-message').keypress(function(e) {
              if ( e.which == 13 ) {
                var message = $(this).val();
                var html = "<b><%= username %>:</b> "+ message + "<br/>";
                socket.send(html);
                $('#lobby-messages').append(html);
                $('#lobby-messages').scrollTop($('#lobby-messages').prop('scrollHeight'));
                $(this).val('');
              }
            });
          });
        </script>
