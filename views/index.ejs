        <script type="text/javascript">
          var validator = null;
          $(document).ready(function(){
            $('#register').on('shown', function() {
              $('#register-username').val('');
              $('#register-password').val('');
              $('#register-confirm-password').val('');
              $('#register-msgs').html('');
              $('#register-username').focus();
            });
            $('#forget').on('shown', function() {
              $('#forget-msgs').html('');
              $('#forget-username').val('');
              $('#forget-username').focus();
            });
            $('#get-password').click(function() {
              var username = $('#forget-username').val();
              if ( !(_.isEmpty(username)) ) {
                $('#forget-msgs').html('<div class="alert alert-info">Please reset your password via re-register!</div>');
              } else {
                $('#forget-msgs').html('');
                $('#forget-username').focus();
              }
            });
            validator = new FormValidator('signup-form', [
              { name: 'register-username',
                rules: 'required|alpha_numeric' },
              { name: 'register-password',
                rules: 'required' },
              { name: 'register-confirm-password',
                rules: 'required|matches[register-password]' }
            ], function(errors, evt) {
              if ( errors.length > 0 ) {
                var errorString = '';
                for (var i = 0, errorLength = errors.length; i < errorLength; i++) {
                  errorString += errors[i].message + '<br />';
                }
                $('#register-msgs').html('<div class="alert alert-error">'+errorString+'</div>');
              }
            });
          });
        </script>
