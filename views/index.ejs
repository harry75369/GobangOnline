        <div class="container-fluid">
          <div class="hero-unit">
              <div class="container-fluid">
                <h1>Gobang Online</h1>
                <h2>A Multi-player Online Gobang Game</h2>
                <div class="row-fluid">
                  <div class="span4 offset4">
                    <form class="signin-form" method="post" action="/">
                      <h3>Please sign in</h3>
                      <% if ( typeof message !== 'undefined' && message.length > 0) {%>
                        <div class="alert alert-error"><%= message[0] %></div>
                      <% } %>
                      <input class="input-block-level" type="text" id="username" name="username" placeholder="Username"></input>
                      <input class="input-block-level" type="password" name="password" placeholder="Password"></input>
                      <div class="btn-group">
                        <button type="submit" class="btn btn-primary btn-large"><i class="icon-signin"></i> Sign in</button>
                        <button class="btn btn-primary btn-large dropdown-toggle" data-toggle="dropdown">
                          <i class="icon-caret-down"></i>
                        </button>
                        <ul class="dropdown-menu">
                          <li><a href="#register" data-toggle="modal"><i class="icon-code-fork"></i> Register</a></li>
                          <li><a href="#forget" data-toggle="modal"><i class="icon-question"></i> Forget Password</a></li>
                        </ul>
                      </div>
