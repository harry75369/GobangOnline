        <div class="container-fluid">
          <div class="hero-unit">
              <div class="container">
                <h1>Gobang Online</h1>
                <h2>A Multi-player Online Gobang Game</h2>
                <div class="row">
                  <div class="span4 offset4">
                    <form class="well" method="post" action="/">
                      <h3>Please sign in</h3>
                      <label>Username</label>
                      <input type="text" name="username" class="input-block-level"></input>
                      <label>Password</label>
                      <input type="password" name="password" class="input-block-level"></input>
                      <div class="btn-group">
                        <button type="submit" class="btn btn-primary btn-large">Sign in</button>
                        <button class="btn btn-primary btn-large dropdown-toggle" data-toggle="dropdown">
                          <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                          <li><a href="#register" data-toggle="modal">Register</a></li>
                          <li><a href="#forget" data-toggle="modal">Forget Password</a></li>
                        </ul>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
          </div>
        </div>

        <div id="register" class="modal hide fade">
          <div class="modal-header">
            <button class="close" data-dismiss="modal">&times;</button>
            <h3>Register</h3>
          </div>
          <div class="modal-body">
          </div>
          <div class="modal-footer">
            <button class="btn" data-dismiss="modal">Cancel</button>
            <button class="btn btn-primary">Register</button>
          </div>
        </div>

        <div id="forget" class="modal hide fade">
          <div class="modal-header">
            <button class="close" data-dismiss="modal">&times;</button>
            <h3>Forget password</h3>
          </div>
          <div class="modal-body">
          </div>
          <div class="modal-footer">
            <button class="btn" data-dismiss="modal">Cancel</button>
            <button class="btn btn-primary">Send</button>
          </div>
        </div>

        <div id="about" class="modal hide fade">
          <div class="modal-header">
            <button class="close" data-dismiss="modal">&times;</button>
            <h3>About</h3>
          </div>
          <div class="modal-body">
            <dl class="dl-horizontal">
              <dt>Author<dt><dd>Chaoya Li (3090103502)</dd>
              <dt>Email</dt><dd>harry75369@gmail.com</dd>
            </dl>
          </div>
          <div class="modal-footer">
            <button class="btn" data-dismiss="modal">OK</button>
          </div>
        </div>

